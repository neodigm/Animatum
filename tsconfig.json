{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"noImplicitAny": true,
		"declaration": true,
		"target": "es2015",
		"module": "es2015",
		"lib": [
			"DOM",
			"es6",
			"es2016",
		    "es2017"
		],
		"strict": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
